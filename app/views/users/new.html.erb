<!-- app/views/users/new.html.erb -->

<h1>Signup!</h1>
<br>
<%= form_for :user, url: '/users' do |f| %>
  <dl class="dl-horizontal">
    <dt>First Name:</dt> <dd><div class="col-md-4"><%= f.text_field :first_name, class: "form-control" %></div></dd> <br>
    <dt>Last Name:</dt> <dd><div class="col-md-4"><%= f.text_field :last_name, class: "form-control" %></div></dd><br>
    <dt>Email:</dt> <dd><div class="col-md-4"><%= f.text_field :email, class: "form-control" %><div class="col-md-4"></dd> <br>
    <dt>Password:</dt> <dd><div class="col-md-4"><%= f.password_field :password, class: "form-control" %><div class="col-md-4"></dd> <br>
    <dt>Confirm Password:</dt> <dd><div class="col-md-4"><%= f.password_field :password_confirmation, class: "form-control" %><div class="col-md-4"></dd> <br>
    <dd><%= f.submit "Submit", class: "btn btn-default" %></dd>
  </dl>
<% end %>
<!-- clas="form-control" -->