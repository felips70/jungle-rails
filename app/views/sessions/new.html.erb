<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>

<%= form_tag '/login' do %>
  <dl class="dl-horizontal">
    <dt>Email:</dt> <dd><div class="col-md-4"><%= text_field_tag :email, "", class: 'form-control' %></div></dd> <br>
    <dt>Password:</dt> <dd><div class="col-md-4"><%= password_field_tag :password, "", class: 'form-control' %></div></dd> <br>
    <dd><%= submit_tag "Submit", class: "btn btn-default" %> </dd>
  </dl>
<% end %>