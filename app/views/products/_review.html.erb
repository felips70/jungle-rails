<div class="row">
    <dl class="dl-horizontal">
      <dt>Reviewed by</dt>
      <dd><%= review.user.first_name %> <%= review.user.last_name %></dd>
      <dt>Description</dt>
      <dd><%= review.description %></dd>
      <dt>Rating</dt>
      <dd><%= review.rating%>/5</dd>
      <dt></dt>
        <% if current_user.try(:id) == review.user.id %>
          <dd>
          <%= link_to 'Delete', product_review_path(@product, review),
                data: {:confirm => 'Are you sure?'}, :method => :delete %>
          </dd>
        <% end %>
    </dl>
</div>
